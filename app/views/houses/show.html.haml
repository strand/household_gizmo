      - unless version.reify.blank?
        - title = "#{version.reify.board_title} â€“ " + "#{distance_of_time_in_words_to_now version.reify.updated_at} ago"
        %p= link_to title, "url_to_be_filled_in_later"

    / = form.simple_fields_for board do |f|
    /   = f.input :title
