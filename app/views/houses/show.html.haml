  = house.name
  %sup= link_to "Edit house", edit_house_path
= simple_form_for house, :html => {:class => 'form-inline' } do |form|
  .inputs
    = form.input :board_title
    = form.input :board_content,
                 placeholder: "Groceries, todos, whatever",
                 input_html: { class: "span6" }
